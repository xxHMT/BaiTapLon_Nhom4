@model IEnumerable<QL_SinhVien.Models.QuanLyDiem>

@{
    ViewData["Title"] = "Index";
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
}

<h1 class="w3-container w3-center"> 
      Quản Lí Điểm
</h1>

<h2>Danh sách Điểm</h2>

<p>
    <a asp-action="Create">Thêm Điểm</a>
</p>
<table class="w3-table-all w3-centered ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QuanLyMonHoc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuanLySV)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diem)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.QuanLyMonHoc.TenMon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuanLySV.TenSV)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Diem)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TenMon">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.TenMon">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.TenMon">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>